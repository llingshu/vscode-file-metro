{
  "name": "file-metro",
  "displayName": "File Metro",
  "description": "Visualize your workspace as a metro map",
  "publisher": "llingshu",
  "repository": {
    "type": "git",
    "url": "https://github.com/llingshu/vscode-file-metro"
  },
  "version": "0.1.1",
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "metro.open",
        "title": "Open Metro View"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "metro-activity-bar",
          "title": "Metro",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "metro-activity-bar": [
        {
          "type": "webview",
          "id": "metro.localView",
          "name": "Local Metro View",
          "icon": "images/icon.png"
        }
      ]
    },
    "configuration": {
      "title": "File Metro Configuration",
      "properties": {
        "metro.defaultColor": {
          "type": "string",
          "default": "#007fd4",
          "description": "Default color for new stations"
        },
        "metro.showInactiveStations": {
          "type": "boolean",
          "default": true,
          "description": "Show inactive stations (background dots)"
        }
      }
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.100.0",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reactflow": "^11.11.4",
    "uuid": "^13.0.0"
  }
}