{
  "name": "file-metro",
  "displayName": "Metro Code Board",
  "description": "Infinite canvas for code visualization, architecture diagrams, and whiteboard.",
  "publisher": "llingshu",
  "repository": {
    "type": "git",
    "url": "https://github.com/llingshu/vscode-file-metro"
  },
  "version": "0.2.3",
  "icon": "images/icon.png",
  "license": "MIT",
  "engines": {
    "vscode": "^1.100.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [],
  "main": "./dist/extension.js",
  "contributes": {
    "commands": [
      {
        "command": "metro.open",
        "title": "Open Metro View"
      },
      {
        "command": "metro.addGhostTask",
        "title": "Add Task",
        "icon": "$(add)"
      },
      {
        "command": "metro.deleteGhostTask",
        "title": "Delete Task",
        "icon": "$(trash)"
      },
      {
        "command": "metro.openGhostTask",
        "title": "Open Task",
        "icon": "$(new-file)"
      },
      {
        "command": "metro.focusNode",
        "title": "Focus on Map",
        "icon": "$(target)"
      },
      {
        "command": "metro.openFile",
        "title": "Open File",
        "icon": "$(go-to-file)"
      },
      {
        "command": "metro.toggleTaskCompletion",
        "title": "Toggle Done",
        "icon": "$(check)"
      }
    ],
    "viewsContainers": {
      "activitybar": [
        {
          "id": "metro-activity-bar",
          "title": "Metro",
          "icon": "images/icon.png"
        }
      ]
    },
    "views": {
      "metro-activity-bar": [
        {
          "type": "webview",
          "id": "metro.localView",
          "name": "Local Metro View",
          "icon": "images/icon.png"
        },
        {
          "id": "metro.view.plan",
          "name": "Plan",
          "icon": "images/icon.png"
        },
        {
          "id": "metro.view.tasks",
          "name": "Tasks",
          "icon": "images/icon.png"
        },
        {
          "id": "metro.view.coordinates",
          "name": "Coordinates",
          "icon": "images/icon.png"
        },
        {
          "id": "metro.view.done",
          "name": "History",
          "icon": "images/icon.png"
        }
      ]
    },
    "menus": {
      "view/title": [
        {
          "command": "metro.addGhostTask",
          "when": "view == metro.view.plan",
          "group": "navigation"
        }
      ],
      "view/item/context": [
        {
          "command": "metro.openGhostTask",
          "when": "view == metro.view.plan && viewItem == ghost-task",
          "group": "inline"
        },
        {
          "command": "metro.deleteGhostTask",
          "when": "view == metro.view.plan && viewItem == ghost-task",
          "group": "inline"
        },
        {
          "command": "metro.toggleTaskCompletion",
          "when": "viewItem =~ /task-node/ && (view == metro.view.tasks || view == metro.view.done)",
          "group": "inline"
        },
        {
          "command": "metro.openFile",
          "when": "viewItem =~ /can-open/",
          "group": "inline"
        },
        {
          "command": "metro.openFile",
          "when": "viewItem =~ /can-open/"
        }
      ]
    },
    "configuration": {
      "title": "File Metro Configuration",
      "properties": {
        "metro.defaultColor": {
          "type": "string",
          "default": "#007fd4",
          "description": "Default color for new stations"
        },
        "metro.showInactiveStations": {
          "type": "boolean",
          "default": true,
          "description": "Show inactive stations (background dots)"
        }
      }
    },
    "colors": [
      {
        "id": "metro.color0",
        "description": "Red Metro Color",
        "defaults": {
          "dark": "#e3002c",
          "light": "#e3002c",
          "highContrast": "#e3002c"
        }
      },
      {
        "id": "metro.color1",
        "description": "Blue Metro Color",
        "defaults": {
          "dark": "#007fd4",
          "light": "#007fd4",
          "highContrast": "#007fd4"
        }
      },
      {
        "id": "metro.color2",
        "description": "Green Metro Color",
        "defaults": {
          "dark": "#008000",
          "light": "#008000",
          "highContrast": "#008000"
        }
      },
      {
        "id": "metro.color3",
        "description": "Yellow Metro Color",
        "defaults": {
          "dark": "#f3a900",
          "light": "#f3a900",
          "highContrast": "#f3a900"
        }
      },
      {
        "id": "metro.color4",
        "description": "Purple Metro Color",
        "defaults": {
          "dark": "#800080",
          "light": "#800080",
          "highContrast": "#800080"
        }
      },
      {
        "id": "metro.color5",
        "description": "Orange Metro Color",
        "defaults": {
          "dark": "#ff7f00",
          "light": "#ff7f00",
          "highContrast": "#ff7f00"
        }
      },
      {
        "id": "metro.color6",
        "description": "Gray Metro Color",
        "defaults": {
          "dark": "#a0a0a0",
          "light": "#a0a0a0",
          "highContrast": "#a0a0a0"
        }
      },
      {
        "id": "metro.coordinateColor",
        "description": "Color for metro coordinate icons",
        "defaults": {
          "dark": "#e3002c",
          "light": "#e3002c",
          "highContrast": "#e3002c"
        }
      },
      {
        "id": "metro.transparent",
        "description": "Transparent color for suppressing icons",
        "defaults": {
          "dark": "#00000000",
          "light": "#00000000",
          "highContrast": "#00000000"
        }
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run package",
    "compile": "webpack",
    "watch": "webpack --watch",
    "package": "webpack --mode production --devtool hidden-source-map",
    "compile-tests": "tsc -p . --outDir out",
    "watch-tests": "tsc -p . -w --outDir out",
    "pretest": "npm run compile-tests && npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "node ./out/test/runTest.js"
  },
  "devDependencies": {
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "@types/uuid": "^10.0.0",
    "@types/vscode": "^1.100.0",
    "css-loader": "^7.1.2",
    "style-loader": "^4.0.0",
    "ts-loader": "^9.5.4",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1"
  },
  "dependencies": {
    "react": "^19.2.0",
    "react-dom": "^19.2.0",
    "reactflow": "^11.11.4",
    "uuid": "^13.0.0"
  }
}